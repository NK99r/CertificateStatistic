<UserControl x:Class="CertificateStatisticWPF.Views.ChartsUC.MultiYearsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CertificateStatisticWPF.Views.ChartsUC"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Margin="5">
            <StackPanel Orientation="Vertical">
                <lvc:CartesianChart Series="{Binding YearColumnSeries}" LegendLocation="Top" Height="300">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding YearLabels}">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="1" Stroke="#ccc"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="证书数量">
                            <lvc:Axis.Separator>
                                <lvc:Separator StrokeThickness="1" Stroke="#ccc"/>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                <TextBlock Text="各年份证书数量统计" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" Margin="5">
            <StackPanel Orientation="Vertical">
                <lvc:PieChart LegendLocation="Right" Series="{Binding PieSeries}" Height="300"/>
                <TextBlock Text="全部证书类别占比统计" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Margin="5">
            <StackPanel Orientation="Vertical">
                <lvc:CartesianChart Grid.Row="1" Grid.Column="1" Series="{Binding ProfessionColumnSeries}" LegendLocation="Top" Height="300">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding ProfessionLabels}" LabelsRotation="20" Title="专业名称">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="1" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                <TextBlock Text="各专业证书数量统计" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="5">

        </Border>
    </Grid>
</UserControl>
