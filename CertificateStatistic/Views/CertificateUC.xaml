<UserControl x:Class="CertificateStatistic.Views.CertificateUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CertificateStatistic.Views"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="20,10">
            <DataGrid x:Name="CertificatesSheet" MaxHeight="700" Height="700" MinHeight="200" IsReadOnly="False">

            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20">
            <Border Background="SkyBlue" Height="200" Width="300">
                
            </Border>    
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
            <Image Height="200" Width="300"></Image>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="20" Orientation="Vertical">
            <Border Background="SkyBlue" Height="200" Width="300">

            </Border>
        </StackPanel>
    </Grid>
</UserControl>
