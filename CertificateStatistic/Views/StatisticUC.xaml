<UserControl x:Class="CertificateStatisticWPF.Views.StatisticUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CertificateStatisticWPF.Views"
             mc:Ignorable="d" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="AliceBlue">
    <md:DrawerHost>
        <md:DrawerHost.TopDrawerContent>
            <Border Width="1024">
                <ItemsControl ItemsSource="{Binding YearButtonList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button >
                                
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </md:DrawerHost.TopDrawerContent>
        <!-- 主内容区域 -->
        <Grid>
            <!-- 顶部工具栏 -->
            <DockPanel>
                <Button ToolTip="打开筛选抽屉">
                    <md:PackIcon Kind="Menu" Width="24" Height="24"/>
                </Button>
            </DockPanel>

            <!-- 统计内容占位 -->
            <ContentControl prism:RegionManager.RegionName="StatisticContentRegion"/>
        </Grid>
    </md:DrawerHost>
</UserControl>
